.stat_box
    .row
        %h1 Results for tags: #{@tags}
        %br
    .row.chart
        .col-md-8.col-md-offset-2
            -# = line_chart @trades.group(:created_at).sum(:result)
            -# = line_chart @chart.group(:created_at).sum(:Result).order("day asc").count.map { |x,y| { x => (@sum += y)} }.reduce({}, :merge)
            = line_chart @trades.group_by_day("trades.created_at").order("day asc").sum(:result).map { |x,y| { x => (@sum += y)} }.reduce({}, :merge), {library: {hAxis: {title: "Date", format:'MMM d, y'}, vAxis: {title: "Pips"}}}
    .row.stats
        .col-md-3.col-md-offset-3
            %p
                %strong Total
                = unit
                " :"
                #{@pipresult}
            %p
                %strong  Average trade outcome:
                #{@average} + " " + unit
            %p
                %strong  Winning percentage:
                #{@winrate}%
        .col-md-3
            %p
                %strong  Largest win:
                #{@largestwin}
            %p
                %strong  Largest loss:
                #{@largestloss}

