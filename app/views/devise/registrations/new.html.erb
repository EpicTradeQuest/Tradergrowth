<div class="container log-in">
    <div class="panel panel-default">
        <div class="panel heading">
          <h2>Sign up</h2>
          <p class="help-block">And start journalling trades instantly!</p>
          </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <div class="form-group">
        <%= f.label "Email" %>
        <%= f.input :email, required: true, autofocus: true, label: false, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Password" %>
        <%= f.input :password, required: true, label: false, class: "form-control" %>
        <p class="help-block">Password must be 8 characters or more.</p>
      </div>
      <div class="form-group">
        <%= f.label "Confirm Password" %>
        <%= f.input :password_confirmation, required: true, label: false, class: "form-control" %>
      </div>

    <div class="form-group">
      <%= f.button :submit, "Sign up", class: "btn btn-warning" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
</div>