<%= flash_messages %>
<div class="container log-in">
    <div class="panel panel-default">
        <div class="panel heading">
          <h2>Start Your 14-Day Free Trial</h2>
          <p class="help-block">And start journalling trades instantly!</p>
          </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, id: "trial-form" }) do |f| %>
    <%= f.error_notification %>
      <div class="form-group">
        <%= f.label "Email" %>
        <%= f.input :email, required: true, autofocus: true, label: false, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Password" %>
        <%= f.input :password, required: true, label: false, class: "form-control" %>
        <p class="help-block">Password must be 8 characters or more.</p>
      </div>
      <div class="form-group">
        <%= f.label "Confirm Password" %>
        <%= f.input :password_confirmation, required: true, label: false, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "How do you record your trades?" %>
        <%= f.input :trade_unit, collection: [['Pips', 1], ['Points', 2], ['Dollars', 3],
                                                                ['Percent', 4], ['R-Ratio', 5]],
                 selected: 'Pips', required: true, label: false, class: "form-control" %>
        <p class="help-block">This is permanent, choose wisely!.</p>
      </div>
    <div class="form-group">
      <p class="help-block">By joing tradejournal.co you agree to our
      <%= link_to 'privacy policy', privacy_path %>
      and
      <%= link_to 'terms of service', tos_path %>.</p>
      <%= f.button :submit, "Sign up", class: "btn btn-warning", id: "registerbtn" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
</div>