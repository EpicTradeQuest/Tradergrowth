= flash_messages
.container.log-in
  .panel.panel-default.loginpanel
    .panel-heading
      %h2 Start Your 14-Day Free Trial
      %p.helpblock And start learning instantly.

    .panel-body
    = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', multipart: true } do |f|
      = f.error_notification
      .form-group
        = f.label "Email"
        = f.input :email, input_html: { class: "form-control", placeholder: "Email Address", type: 'email', autofocus: true }, label: false
      .form-group
        = f.label "Password"
        = f.input :password, required: true, input_html: {class: "form-control", placeholder: "8 Characters or more" }, label: false
      .form-group
        = f.label "Confirm Password"
        = f.input :password_confirmation, required: true, label: false, input_html: { class: "form-control", placeholder: "Repeat the password" }
      .form-group
        = f.label "How do you record your trades?"
        = f.input :trade_unit, collection: [['Pips', 1], ['Points', 2], ['Dollars', 3], ['Percent', 4], ['R-Ratio', 5]], selected: 'Pips', required: true, label: false, input_html: { class: "form-control" }
      %div
      .form-group
        .help-block
          By joining, you agree to our
          = link_to 'privacy policy', privacy_path
          and
          = link_to 'terms of service', tos_path
      = f.button :submit, "Join Now", class: "btn btn-danger", id: "registerbtn"
