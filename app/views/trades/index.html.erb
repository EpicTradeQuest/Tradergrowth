<p id="notice"><%= notice %></p>

<h1>Listing Trades</h1>

<table>
  <thead>
    <tr>
      <th>Screenshot</th>
      <th>Result</th>
      <th>Description</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= image_tag trade.screenshot.url(:medium) %></td>
        <td><%= trade.result %></td>
        <td><%= trade.description %></td>
        <td><%= trade.tag_list %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
        <td><%= link_to 'Delete', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

