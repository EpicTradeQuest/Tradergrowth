= simple_form_for @trade, html: { multipart: true } do |f|
  .form-inline.form_box
    %h2 Log a Trade
    .form-group
      = f.input :screenshot, class: 'form-control'

    .form-group
      = f.input :result, input_html: { placeholder: 'Pips or Points' }, class: 'form-control'

    .form-group
      = f.input :tag_list, input_html: { placeholder: 'Seperate with commas'  }, class: 'form-control'

    = f.button :submit, "Log Trade", class: "btn btn-danger"