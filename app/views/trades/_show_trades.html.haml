#pins.transitions-enabled
    -@trades.each do |trade|
        .box.panel.panel-default
            = link_to (image_tag trade.screenshot.url(:medium)), trade
            %br
            %small=  local_time(trade.created_at, '%d/%m/%Y')
            %h2= "#{trade.result} " + unit
            %p= "Tags: #{trade.tag_list}"
            = link_to ("edit"), edit_trade_path(trade), id: "edittradenav"
            |
            = link_to 'delete', trade_path(trade), method: :delete, data: { confirm: "Are you sure you want to delete this trade?"}