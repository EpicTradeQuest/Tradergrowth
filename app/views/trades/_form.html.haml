= simple_form_for @trade, html: { multipart: true } do |f|
  #index-form
    .form-group
      = f.input :screenshot, input_html: { class: 'form-control' }

    .form-group
      = f.input :result, input_html: { class: 'form-control' }

    .form-group
      = f.input :description, input_html: { class: 'form-control' }

    .form-group
      = f.input :tag_list, input_html: { class: 'form-control', value: @trade.tag_list.to_s }

    = f.button :submit, class: "btn btn-danger", method: :update