= simple_form_for @trade, html: { multipart: true } do |f|
  -if @trade.errors.any?
    %h2
      =pluralize(@pin.errors.count, "error")
      prevented this Trade from saving
    %ul
      - @pin.errors.full_messages.each do |msg|
        %li = msg
  .form-group
    = f.input :screenshot, input_html: { class: 'form-control' }

  .form-group
    = f.input :result, input_html: { class: 'form-control' }

  .form-group
    = f.input :description, input_html: { class: 'form-control' }

  .form-group
    = f.input :tag_list, :value => @trade.tag_list.to_s

  = f.button :submit, class: "btn btn-primary"